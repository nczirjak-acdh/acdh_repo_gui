
{% set properties = {
    'acdh:hasCountry': {
	'icon': 'subtitles',
        'label': 'Country',
        'url_only': false
    },
    'acdh:hasRegion': {
        'icon': 'subtitles',
        'label': 'Region',
        'url_only': false
    },
    'acdh:hasCity': {
        'icon': 'subtitles',
        'label': 'City',
        'url_only': false
    },
    'acdh:Postcode': {
        'icon': 'subtitles',
        'label': 'Postcode',
        'url_only': false
    },
    'acdh:hasAddressLine1': {
        'icon': 'subtitles',
        'label': 'Address',
        'url_only': false
    },
    'acdh:hasAddressLine2': {
        'icon': 'subtitles',
        'label': 'Address',
        'url_only': false
    },
    'acdh:hasEmail': {
        'icon': 'subtitles',
        'label': 'Email',
        'url_only': false
    },
    'acdh:hasUrl': {
        'icon': 'subtitles',
        'label': 'Url',
        'url_only': false
    }
}
%}

<div class="arche-detail-view" >
    
    <div class="arche-detail-main" id="arche-dv-main">
        {% if result.imageUrl %}<div class="res-inside-wrap col-lg-8 ">{% endif%}
        
            {% if  basic.getTitle() %}
                <div class="res-property">
                    <span class="res-title">
                        {{  basic.getTitle() }}
                    </span>
                </div>
            {% endif%} 

            {% if basic.getAcdhType() %}
                <div class="res-property">
                    <i class="material-icons">&#xE54E;</i>
                    <span class="res-prop-label">{{ "Type"|trans }}:</span> 
                    <span class="res-prop-value">
                        <a href="/browser/discover/&type={{ basic.getAcdhType() }}/10">{{ basic.getAcdhType() }}</a>
                    </span>
                </div>
            {% endif%}
             
            {%  if basic.getData('acdh:isMemberOf') %}
                {{ include('/modules/custom/acdh_repo_gui/templates/helper-displayField.html.twig', {'data': basic.getData('acdh:isMemberOf'), 'icon': "account_balance", 'label': "is Member Of"} ) }}
            {% endif%}
    
            <h3 class="single-res-heading">{{ "Contact Details"|trans }}</h3>
             
            {% for key, value in properties %}
                {% if basic.getData(key) %}
                     {{ include('/modules/custom/acdh_repo_gui/templates/helper-displayField.html.twig', {'data': basic.getData(key), 'icon': value.icon, 'label':  value.label, 'url_only': value.url_only } ) }}
                {% endif%}
            {% endfor %}
            
            
        {% if result.imageUrl %}</div>{% endif%}
        
        {% if result.imageUrl %}	
            <div class="res-inside-wrap col-lg-4 ">	
                <div class="single-res-thumb">
                    <a data-lightbox="{{ result.title }}" href="{{ result.imageUrl }}"><img src="{{ result.imageUrl }}"></a>
                </div>
            </div>
        {% endif%}
    </div>

</div>    
